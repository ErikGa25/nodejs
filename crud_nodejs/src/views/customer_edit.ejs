<%- include('partials/_header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 offset-md-3 card">
            <div class="card-body">
                <form name="form_node" action="/update/<%= data.id %>" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" id="name" value="<%= data.name%>" class="form-control" autofocus>
                    </div>
                    
                    <div class="form-group">
                        <input type="text" name="address" id="address" value="<%= data.address%>" class="form-control">
                    </div>

                    <div class="form-group">
                        <input type="text" name="phone" id="phone" value="<%= data.phone%>" class="form-control">
                    </div>
        
                    <button type="button" class="btn btn-primary" name="btnEnviar">Actualizar Cliente</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>